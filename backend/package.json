{
  "name": "backend",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start:dev:server": "nodemon --delay 1 -w src -w ../common -e ts -x 'cd .. && ts-node backend/src/main.ts'",
    "start:dev:sqltyper": "sqltyper --database `grep DATABASE_URL ../.env | cut -d= -f2 | tr -d ' '` --prettify --verbose --watch src/sql/",
    "start:dev": "concurrently npm:start:dev:server npm:start:dev:sqltyper",
    "build": "tsc"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/koa": "^2.0.49",
    "@types/koa-basic-auth": "^2.0.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-compress": "^2.0.9",
    "@types/koa-mount": "^4.0.0",
    "@types/koa-router": "^7.0.42",
    "@types/koa-static": "^4.0.1",
    "@types/pg": "^7.11.0",
    "@types/ramda": "^0.26.21",
    "nodemon": "^1.19.1",
    "sqltyper": "^0.2.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.2"
  },
  "dependencies": {
    "db-migrate": "^0.11.6",
    "db-migrate-pg": "^1.0.0",
    "dotenv": "^8.1.0",
    "fp-ts": "^2.0.5",
    "io-ts": "^2.0.1",
    "io-ts-types": "^0.5.0",
    "koa": "^2.8.1",
    "koa-basic-auth": "^4.0.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-mount": "^4.0.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "monocle-ts": "^2.0.0",
    "pg": "^7.12.1",
    "ramda": "^0.26.1",
    "typera-koa": "^0.4.0"
  }
}
